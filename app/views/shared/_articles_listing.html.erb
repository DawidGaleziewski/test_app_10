<% obj.each do |article| %>

 <div class = 'row'>
   <div class = 'col-xs-8 col-xs-offset-2'>
     <div class = 'well well-lg'>
       
       <div class = 'custom-article-title'>
         <%= article.title %>
       </div>
       
       <div class = 'custom-article-body'>
         <%= truncate(article.description, length: 10) %>
       </div>
       
       <hr>
          <div class = 'btn-container'>
           <%= link_to 'Show', article_path(article), class: 'btn btn-primary' %>
           <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success' %>
           <%= link_to 'Delete', article_path(article), method: :delete, class: 'btn btn-danger' %>
         </div>
       
     </div>
   </div>
 </div>
 
<% end %>