<h1 align = 'center'>Log in</h1>

<div class = 'row'>
  <div class = 'col-xs-8 col-xs-offset-2'>

    <%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |user| %>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-4'>
            <%= user.label :email %>
        </div>
        
        <div class = 'col-sm-4'>
          <%= user.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email' %>
        </div>
      </div>
      
      <div class= 'form-group'>
        
        <div class = 'control-label col-sm-4'>
            <%= user.label :password %>
        </div>
        
        <div class= 'col-sm-4'>
          <%= user.password_field :password, class: 'form-control', autocomplete: 'off' %>
        </div>
        
      </div>
      

      
      <div class = 'form-group'>
        <div class = 'col-sm-4 col-sm-offset-4'>
          <%= user.submit "Log in", class: 'btn btn-primary'  %>
        </div>
      </div>

    <% end %>
  </div>
</div>