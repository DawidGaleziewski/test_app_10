<%= render 'shared/errors', obj: @user %>
    

<div class = 'row'>
  <div class = 'col-xs-8 col-xs-offset-2'>

    <%= form_for(obj, :html => {class: 'form-horizontal', role: 'form'}) do |user| %>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-4'>
            <%= user.label :username %>
        </div>
        
        <div class = 'col-sm-4'>
          <%= user.text_field :username, class: 'form-control', autofocus: true, placeholder: 'Username' %>
        </div>
      </div>
      
      <div class= 'form-group'>
        
        <div class = 'control-label col-sm-4'>
            <%= user.label :email %>
        </div>
        
        <div class= 'col-sm-4'>
          <%= user.email_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>
        
      </div>
      
      <div class ='form-group'>
        
        <div class = 'control-label col-sm-4'>
          <%= user.label :password %>
        </div>
        
        <div class = 'col-sm-4'>
          <%= user.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
        
      </div>
      
      <div class = 'form-group'>
        <div class = 'col-sm-4 col-sm-offset-4'>
          <%= user.submit(obj.new_record? ? 'Singup' : 'Update account', class: 'btn btn-primary' ) %>
        </div>
      </div>

    <% end %>
  </div>
</div>


